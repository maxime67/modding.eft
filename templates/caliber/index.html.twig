{% extends 'base.html.twig' %}

{% block title %}Hello CaliberController!
{% endblock %}

{% block body %}
	{% for weapon in weapons_list %}
		<div class="card" style="width:30rem">
			<img class="card-img-top" src="{{ weapon.url }}" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">{{ weapon.name }}</h5>
                <a href="{{ path('app_add_image',{ 'weapon_id': weapon.id })}}">
                <img src="{{ asset('new.png') }}" width='30px'>
                </a>
			</div>
		</div>
	{% endfor %}
{% endblock %}

