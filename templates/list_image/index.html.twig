{% extends 'base.html.twig' %}

{% block title %}Hello ListImageController!
{% endblock %}

{% block body %}
<br>
		<div style="text-align: center">
		<a href="{{ path('app_product_new',{ 'weapon_id': weapon.id })}}">
			<button class="button-17">Add new {{ weapon.name }} mod
			</button>
			</a>
		</div>
		<br>
	{% for image in ImagesList %}
		<div class="container-1">
			<div class="card" style="width:55rem">
				<a href="{{ path('app_image_one',{ 'image_id': image.id })}}">
					<img class="card-img-top myModal" id="{{ image.id }}" src="{{ asset('mod/'~ image.url) }}" alt="Card image cap">
				</a>
				<div class="card-body">
								<a style="text-decoration: none;" href="{{ path('app_user',{ 'uuid': image.getUser.getUuid })}}"
							<button class="button-18">{{ image.getUser.getUuid}}
				</a>

				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}

